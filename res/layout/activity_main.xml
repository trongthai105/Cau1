<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40F11DE7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewSoA"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số A:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp"></TextView>

        <EditText
            android:id="@+id/edSoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewSoB"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số B:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp"></TextView>

        <EditText
            android:id="@+id/edSoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewSoH"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số H:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp"></TextView>

        <EditText
            android:id="@+id/edSoH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnChuvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XuLyChuvi"
            android:text="Chu vi"></Button>

        <Button
            android:id="@+id/btnDientich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="XuLyDientich"
            android:text="Dien tich"></Button>
    </LinearLayout>

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả ở đây nè:"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        android:textStyle="bold"></TextView>

</LinearLayout>